.message{data: {message: {id: message.id}}}
.chat-main__message-list__messages
  .chat-main__message-list__messages__upper-info
    .chat-main__message-list__messages__upper-info__talker
      = message.user.name
    .chat-main__message-list__messages__upper-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")        
  .chat-main__message-list__messages__text
    - if message.content.present?
      %p.chat-main__message-list__messages__text__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
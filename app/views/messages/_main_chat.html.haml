.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      .chat-main__group-info__left-box__group-name
        = @group.name
      .chat-main__group-info__left-box__member-name
        - @group.users.each do |user|
          = user.name
    .chat-main__group-info__right-box
      =link_to edit_group_path(@group) do
        Edit
  .chat-main__message-list
    = render @messages
    
  .chat-main__message-form
    .chat-main__message-form__new__message
      .chat-main__message-form__new__message__input-box
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'form__message', placeholder: 'type a message'
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'submit-btn'